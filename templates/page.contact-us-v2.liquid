<script>
  (function ($) {
    function inputFocus(duration) {
      setTimeout(function () {
        $('.active-pane .field-input').focus();
      }, duration);
    }

    $('.field-input').keypress(function (e) {

      var key = e.which;
      if (key == 13) // the enter key code

      {
        e.preventDefault();
        $('.active-pane .nextStep').click();
      }
    });

    $(document).ready(function () {
      $('#contact_page_form').attr('autocomplete', 'off')

      $('#email_address').on('keypress', function () {
        var re = /([A-Z0-9a-z_-][^@])+?@[^$#<>?]+?\.[\w]{2,4}/.test(this.value);
        if (!re) {
          $('#error').show();
        } else {
          $('#error').hide();
        }
      })

      $(".form-next-btn").hide();
      $(".field-input").keyup(function () {
        if ($(this).val()) {
          $(this).next(".form-next-btn").show();
        } else {
          $(this).next(".form-next-btn").hide();
        }
      });

      $(".select-option").change(function () {
        if ($(this).val()) {
          $(this).next(".form-next-btn").show();
        } else {
          $(this).next(".form-next-btn").hide();
        }
      });

      $(".make-subscribe").click(function () {
        $(".form-submit-btn").show();
      });

      $('.talk-radio-btn input[type="radio"]').click(function () {
        var inputValue = $(this).attr("value");
        var targetBox = $("." + inputValue);
        $(`.box:not(.${inputValue})`).html('');
        $(".lets-talk").fadeOut(0);
        $(".box").not(targetBox).fadeOut();
        $(targetBox).fadeIn(2000);
        inputFocus();
      });

      $(".step1 .nextStep").click(function () {
        $(".step1").removeClass('active-pane');
        $(".step1").fadeOut(0);
        $('.step2').fadeIn(2000);
        setTimeout(function () {
          $(".step2").addClass('active-pane');
        }, 2000);
        inputFocus(2010);
      });

      $(".step2 .nextStep").click(function () {
        $(".step2").fadeOut(0);
        $(".step2").removeClass('active-pane');
        $('.step3').fadeIn(2000);
        setTimeout(function () {
          $(".step3").addClass('active-pane');
        }, 2000);
        inputFocus(2010);
      });

      $(".step3 .nextStep").click(function () {
        $(".step3").fadeOut(0);
        $(".step3").removeClass('active-pane');
        $('.step4').fadeIn(2000);
        setTimeout(function () {
          $(".step4").addClass('active-pane');
        }, 2000);
        inputFocus(2010);
      });

      $(".step4 .back-btn").click(function () {
        $(".step4").fadeOut(0);
        $(".step4").removeClass('active-pane');
        $(".step3").fadeIn(500);
        $(".step3").addClass('active-pane');
        inputFocus(510);
      });

      $(".step3 .back-btn").click(function () {
        $(".step3").fadeOut(0);
        $(".step3").removeClass('active-pane');
        $(".step2").fadeIn(500);
        $(".step2").addClass('active-pane');
        inputFocus(510);
      });

      $(".step2 .back-btn").click(function () {
        $(".step2").fadeOut(0);
        $(".step2").removeClass('active-pane');
        $(".step1").fadeIn(500);
        $(".step1").addClass('active-pane');
        inputFocus(510);
      });

      $(".step1 .back-btn").click(function () {
        $(".box").fadeOut(1);
        location.reload();
      });

    });
  })(jQuery);
</script>