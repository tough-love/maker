    	$('#formula-00' + activeStepFormula ).show().addClass('active');
    }
    
  });
  
  $('.formula_arrows .arrow-right').click(function(){
    
    if(activeStepFormula<3){
		activeStepFormula+=1;
	    $('.formula .link-target').removeClass('active-target');
      	$('.formula .link-target[data-target="00'+ activeStepFormula + '"]').addClass('active-target');
      
      	$('.formula .content.active').removeClass('active').hide(); 
    	$('#formula-00' + activeStepFormula ).show().addClass('active');
    }
    
  });
  
  
  
</script>