  $(".concept-type-wrp .half-block:first-child").addClass('active');
  
  $(".in-block").click(function(){ 
  	$(".concept-type-wrp .half-block.active").removeClass('active');
    $(".in-block button.active").removeClass('active');
    if(!$(this).hasClass('active')){
      $("button", this).parents('.half-block.active').removeClass('active');
      $("button", this).parents('.half-block').addClass('active');
      $("button", this).addClass('active');
      $('.layring-container.show').fadeOut('fast').removeClass('show');
      $(`#${$("button", this).data('toggle')}`).fadeIn('fast').addClass('show');
      if($(window).scrollTop() > ($('.concept-banner-img').offset().top + $('.concept-banner-img').height())){
        $(window).scrollTop($('.layering-system').offset().top)
      }
    }
  });
  
  $(".panel-title button").click(function(){
    $(this).parents('.accordion-panel').toggleClass('active').find('.panel-body').slideToggle('fast');
    $(this).next().toggleClass('open');
    $(".layring-container.show .panel-title button").not(this).parents('.accordion-panel').removeClass('active').find('.panel-body').slideUp('fast');
    $(".layring-container.show .panel-title button").not(this).next().removeClass('open');
  });
  $('.toggle-icon').click(function(){
    $(this).prev().click();
  });
});
